data-files:    
               resources/habanga-tui/habanga-bluecard-10x15.txt
               resources/habanga-tui/habanga-bluecard-35x53.txt
               resources/habanga-tui/habanga-purplecard-10x15.txt
               resources/habanga-tui/habanga-purplecard-35x53.txt
