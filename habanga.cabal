common common-lang
    default-language:   Haskell2010
    ghc-options:        -Wall -Wcompat -Wincomplete-record-updates
                        -Wincomplete-uni-patterns -Wredundant-constraints

common common-base
    build-depends:      base ^>=4.17.2.1,
                        transformers,
                        lens,
                        mtl,
                        data-default

library habanga-core
    import:             common-base,
                        common-lang
    exposed-modules:    Game
                        Cards
                        GameState
    build-depends:      random
    hs-source-dirs:     src/core

executable habanga-tui
    import:             common-base,
                        common-lang
    main-is:            Main.hs
    other-modules:      ProgramState,
                        MainMenu,
                        GameView,
                        Widgets
                        Paths_habanga
    autogen-modules:    Paths_habanga
    build-depends:      habanga-core,
                        containers,
                        brick,
                        vty >=6.0,
                        vty-crossplatform
    hs-source-dirs:     src/tui
    ghc-options:        -threaded

